<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.register.mentor.MentorRegisterActivity3"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/bglogin"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:src="@drawable/bg_login2"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/logo"
                android:layout_width="178dp"
                android:layout_height="92dp"
                android:src="@drawable/logowithname"
                android:layout_gravity="center"/>
        </FrameLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_checkmark"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/titlePoppinsMedium"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="14sp"
            android:ems="16"
            android:layout_marginTop="20dp"
            android:text="@string/desc_mentor_reg_3"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_back_to_login"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/back_to_login"
            style="@style/titlePoppinsMedium"
            android:backgroundTint="@color/dark_blue"
            android:layout_marginHorizontal="40dp"
            android:textColor="@color/white"
            app:cornerRadius="12dp"
            android:textSize="12sp"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>